<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Configurations ===================== -->

	<bean id="kenyaemr.dq.config.report" class="org.openmrs.module.kenyacore.report.ReportConfiguration">
		<property name="commonReports">
			<set>
				<ref bean="kenyaemr.dq.report.missingMaritalStatus" />
			</set>
		</property>
	</bean>

	<!-- ===================== Apps ===================== -->

	<bean id="kenyaemr.app.dataqual" class="org.openmrs.module.appframework.SimpleAppDescriptor">
		<property name="id" value="kenyaemr.dataQuality" />
		<property name="label" value="Data Quality" />
		<property name="homepageUrl" value="kenyadq/dataqual/dataQualityHome.page" />
		<property name="iconUrl" value="kenyadq:apps/dataqual.png" />
		<property name="order" value="550" />
	</bean>

	<!-- ===================== Reports ===================== -->

	<bean id="kenyaemr.dq.report.missingMaritalStatus" class="org.openmrs.module.kenyacore.report.CalculationReportDescriptor">
		<property name="name" value="Missing marital status" />
		<property name="calculation" value="org.openmrs.module.kenyadq.calculation.MissingMaritalStatusCalculation" />
		<property name="apps"><set><ref bean="kenyaemr.app.dataqual" /></set></property>
	</bean>

</beans>